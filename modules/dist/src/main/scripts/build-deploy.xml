<project basedir="." default="deploy">

  <property name="output.dir" value="${basedir}/target/output"/>
  <property name="deploy.artifacts.dir" value="${basedir}/target/assembly/deploy-artifacts"/>
  <property name="jbossws.default.modules.conf" value="${basedir}/target/assembly/deploy-artifacts/modules-deploy.conf"/>
	
  <target name="deploy" depends="prepare,deploy-wildfly1700-if-available,deploy-wildfly1800-if-available,deploy-wildfly1900-if-available,deploy-wildfly2000-if-available" description="Deploy jbossws to wildfly"/>
  <target name="deploy-wildfly1900-if-available" if="wildfly1900.available">
  	<antcall target="deploy-wildfly1900"/>
  </target>

  <target name="deploy-wildfly2000-if-available" if="wildfly2000.available">
  	<antcall target="deploy-wildfly2000"/>
  </target>

  <target name="deploy-wildfly1700-if-available" if="wildfly1700.available">
  	<antcall target="deploy-wildfly1700"/>
  </target>
  <target name="deploy-wildfly1800-if-available" if="wildfly1800.available">
  	<antcall target="deploy-wildfly1800"/>
  </target>
  <target name="prepare">
    <condition property="wildfly1700.home" value="${jboss.home}">
      <equals arg1="${jbossws.integration.target}" arg2="wildfly1700"/>
    </condition>
    <condition property="wildfly1800.home" value="${jboss.home}">
      <equals arg1="${jbossws.integration.target}" arg2="wildfly1800"/>
    </condition>
    <condition property="wildfly1900.home" value="${jboss.home}">
      <equals arg1="${jbossws.integration.target}" arg2="wildfly1900"/>
    </condition>
    <condition property="wildfly2000.home" value="${jboss.home}">
      <equals arg1="${jbossws.integration.target}" arg2="wildfly2000"/>
    </condition>
   
    <property name="wildfly1700.available.file" value="${wildfly1700.home}/jboss-modules.jar"/>
    <property name="wildfly1800.available.file" value="${wildfly1800.home}/jboss-modules.jar"/>
    <property name="wildfly1900.available.file" value="${wildfly1900.home}/jboss-modules.jar"/>  
    <property name="wildfly2000.available.file" value="${wildfly2000.home}/jboss-modules.jar"/>

    <available property="wildfly1700.available" file="${wildfly1700.available.file}"/>
    <available property="wildfly1800.available" file="${wildfly1800.available.file}"/>
    <available property="wildfly1900.available" file="${wildfly1900.available.file}"/>  
    <available property="wildfly2000.available" file="${wildfly2000.available.file}"/>       
    <tstamp>
      <format property="build.id" pattern="yyyyMMddHHmm"/>
    </tstamp>
  </target>
	
  <target name="init" depends="prepare">
          
    <fail message="jbossws.integration.target not set" unless="jbossws.integration.target"/>
    <echo message="integration.target=${jbossws.integration.target}"/>
    
    <property name="deploy.structure" value="${output.dir}/deploy-${jbossws.integration.target}"/>
  </target>
  <!-- ================================================================== -->
  <!-- Prepare Deployment Structure WildFly-17.0.x                        -->
  <!-- ================================================================== -->

<target name="deploy-structure-wildfly170x" depends="init">
    <delete dir="${deploy.structure}"/>
    <path id="jboss.ant.tasks.classpath">
      <fileset dir="${deploy.artifacts.dir}">
        <include name="**/jbossws-common-tools.jar"/>
      </fileset>
    </path>
    <taskdef name="installModules" classname="org.jboss.ws.tools.ant.InstallModulesTask" classpathref="jboss.ant.tasks.classpath"/>
    <antcall target="deploy-jbossws-cxf-modules-as11" inheritall="false">
      <param name="installserver" value="${deploy.structure}/modules/system/layers/base"/>
      <param name="thirdpartydir" value="${deploy.artifacts.dir}"/>
      <param name="jbossid" value="${jbossws.integration.target}"/>
      <param name="modules-jbossid" value="wildfly1700"/>
    </antcall>
  	<copy toDir="${deploy.structure}/modules/system/layers/base">
      <fileset dir="${deploy.artifacts.dir}/modules/wildfly1700">
        <include name="**/jboss/as/webservices/main/module.xml"/>
      	<include name="**/jboss/as/webservices/server/integration/main/module.xml"/>
      </fileset>
    </copy>
  </target>


  <!-- ================================================================== -->
  <!-- Deployment wildfly1700                                             -->
  <!-- ================================================================== -->

  <target name="target-wildfly1700">
    <property name="jbossws.integration.target" value="wildfly1700"/>
    <echo message="jbossws.integration.target=${jbossws.integration.target}"/>
  </target>
  <target name="deploy-wildfly1700" depends="undeploy-wildfly1700,deploy-structure-wildfly170x">
    <fail message="Not available: ${wildfly1700.available.file}" unless="wildfly1700.available"/>
    <copy todir="${wildfly1700.home}" overwrite="true" verbose="true">
      <fileset dir="${deploy.structure}">
        <exclude name="**/jboss/as/webservices/**/module.xml"/>
      </fileset>
    </copy>
    <!-- Install org/jboss/as/webservices module.xml separately since it needs to reference libs already on the AS -->
    <installModules targetDir="${wildfly1700.home}/modules/system/layers/base/">
      <fileset dir="${deploy.structure}/modules/system/layers/base">
        <include name="**/jboss/as/webservices/**/module.xml"/>
      </fileset>
    </installModules>
  </target>

  <target name="undeploy-wildfly1700" depends="target-wildfly1700,init">
    <fail message="Not available: ${wildfly1700.available.file}" unless="wildfly1700.available"/>
    <macro-undeploy-jbossws-modules targetdir="${wildfly1700.home}/modules/system/layers/base" defaultmodulesconf="${jbossws.default.modules.conf}" modifyjbossintegration="false"/>
  </target>

  <!-- ================================================================== -->
  <!-- Prepare Deployment Structure WildFly-18.0.x                        -->
  <!-- ================================================================== -->

