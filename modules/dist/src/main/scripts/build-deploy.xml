      </fileset>
    </installModules>
  </target>

  <target name="undeploy-wildfly1800" depends="target-wildfly1800,init">
    <fail message="Not available: ${wildfly1800.available.file}" unless="wildfly1800.available"/>
    <macro-undeploy-jbossws-modules targetdir="${wildfly1800.home}/modules/system/layers/base" defaultmodulesconf="${jbossws.default.modules.conf}" modifyjbossintegration="false"/>
  </target>

  <!-- ================================================================== -->
  <!-- Prepare Deployment Structure WildFly-19.0.x                        -->
  <!-- ================================================================== -->

<target name="deploy-structure-wildfly190x" depends="init">
    <delete dir="${deploy.structure}"/>
    <path id="jboss.ant.tasks.classpath">
      <fileset dir="${deploy.artifacts.dir}">
