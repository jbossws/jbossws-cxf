      <param name="exclude.wildcard" value="no-wildcard-exclude-see-excludesfile"/>
      <param name="haltonfailure" value="false"/>
    </antcall>
    <antcall target="tests-report"/>
  </target>
  
  <!-- Run smoke test cases -->
